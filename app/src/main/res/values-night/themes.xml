<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.DDFilms" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Colores primarios -->
        <item name="colorPrimary">@color/gray_dark</item>
        <item name="colorPrimaryVariant">@color/blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Colores secundarios -->
        <item name="colorSecondary">@color/accent_blue</item>
        <item name="colorSecondaryVariant">@color/secondary_light</item>
        <item name="colorOnSecondary">@color/black_60</item>

        <!-- Colores de superficie -->
        <item name="android:colorBackground">@color/primary_dark</item>
        <item name="colorSurface">@color/primary_dark</item>
        <item name="colorOnSurface">@color/white_60</item>

        <!-- Barra de estado -->
        <item name="android:statusBarColor">@color/primary_dark</item>

        <!-- Otros -->
        <item name="android:navigationBarColor">@color/primary_dark</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        <item name="android:fontFamily">@font</item>
    </style>
</resources>